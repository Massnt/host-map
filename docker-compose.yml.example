services:
  flask-proxy:
    build:
      context: ./docker/flask
    container_name: flask_proxy
    volumes:
      - ./:/var/www
      - ./storage/logs:/app/logs
    restart: unless-stopped
    ports:
      - "8080:8080"
    networks:
      - proxy-network

  nginx:
    image: nginx:1.17-alpine
    container_name: esus_nginx
    restart: unless-stopped
    ports:
      - "80:80"
    volumes:
      - ./:/var/www
      - ./docker/nginx:/etc/nginx/conf.d
    depends_on:
      - flask-proxy
    networks:
      - proxy-network

networks:
  proxy-network:
    driver: bridge
